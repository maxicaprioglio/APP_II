<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Actividad2.ViewModels"
             x:Class="Actividad2.Views.MainPage">

    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Image Source="{Binding ImagenUrl}" HeightRequest="200" WidthRequest="200" />

            <Entry Text="{Binding Nombre, Mode=TwoWay}" Placeholder="Nombre" />
            <Label Text="{Binding ErrorNombre}" TextColor="Red" FontSize="12" />
            
            <Entry Text="{Binding Edad, Mode=TwoWay}" Placeholder="Edad" Keyboard="Numeric" />
            <Label Text="{Binding ErrorEdad}" TextColor="Red" FontSize="12" />

            <Editor Text="{Binding Descripcion, Mode=TwoWay}" Placeholder="DescripciÃ³n" AutoSize="TextChanges" />
            <Label Text="{Binding ErrorDescripcion}" TextColor="Red" FontSize="12" />

            <Button Text="Guardar" Command="{Binding GuardarCommand}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>